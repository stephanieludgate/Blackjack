@model Blackjack.Models.Game

@{
    ViewData["Title"] = "New Game";
}

<div class="contentBox col-md-6 col-md-offset-3 my-5 p-4 bg-light text-dark border border-dark rounded-lg text-center" id="casinoBox">
    <div><img src="~/images/poker-chips.png" height="200" /></div>
    <h3>Welcome @Html.DisplayFor(model => model.Player.Username)!</h3>
    <p><strong>Current Balance : </strong>$@Html.DisplayFor(model => model.Player.Balance)</p>
    <form method="post">
        <label>Place a bet between $1 - $100</label>
        <div><input type="number" name="betPlaced" /></div>
        <small>@ViewData["Error"]</small>
        <input type="submit" value="Place Bet" class="btn btn-default" style="margin-top: 20px !important;"/>
    </form>
</div>
